# ============================================
# Sarabun PDF API - Environment Configuration
# ============================================
# แก้ไขไฟล์นี้เพื่อเปลี่ยน port และ settings อื่นๆ

# Port ที่เปิดให้เข้าถึงจากภายนอก (host)
HOST_PORT=8889

# Port ภายใน container
CONTAINER_PORT=8888

# Image name and tag
IMAGE_NAME=sarabun-pdf-api
IMAGE_TAG=1.0.0

# Container name
CONTAINER_NAME=sarabun-pdf-api

# JVM Settings
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseContainerSupport

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# Spring Profile
SPRING_PROFILE=docker
